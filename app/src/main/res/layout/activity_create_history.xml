<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_background"
    tools:context=".CreateHistoryActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ygreen_light"
        android:gravity="center"
        android:padding="8dp"
        android:text="Create A Donation History"
        android:textStyle="bold"
        android:textColor="@color/bg_normal"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_history_donar_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:hint="Donar Student ID."
        android:inputType="textLongMessage|textMultiLine"
        android:maxLines="8"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/light_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.31" />

    <EditText
        android:id="@+id/et_history_patent_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:hint="Write patent info or other."
        android:inputType="textLongMessage|textMultiLine"
        android:maxLines="5"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/light_black"
        app:layout_constraintEnd_toEndOf="@+id/et_history_donar_id"
        app:layout_constraintStart_toStartOf="@+id/et_history_donar_id"
        app:layout_constraintTop_toBottomOf="@+id/et_history_donar_id" />

    <EditText
        android:id="@+id/et_history_security_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:hint="Write the security code."
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/light_black"
        app:layout_constraintEnd_toEndOf="@+id/et_history_patent_info"
        app:layout_constraintStart_toStartOf="@+id/et_history_patent_info"
        app:layout_constraintTop_toBottomOf="@+id/et_history_patent_info" />

    <Button
        android:id="@+id/btn_history_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/bg_button"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="Create"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_history_security_code" />

    <TextView
        android:id="@+id/tv_history_help_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/red_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_history_security_code" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:padding="4dp"
        android:text="Doner Id : "
        android:textColor="@color/green_hard"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/et_history_donar_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_history_donar_id" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Message : "
        android:textColor="@color/green_hard"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/et_history_patent_info"
        app:layout_constraintEnd_toStartOf="@+id/et_history_donar_id"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/et_history_patent_info" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Security : "
        android:textColor="@color/green_hard"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/et_history_security_code"
        app:layout_constraintEnd_toStartOf="@+id/et_history_patent_info"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/et_history_security_code" />

</androidx.constraintlayout.widget.ConstraintLayout>